@model SportsPro.Models.Customer

@{
    ViewData["Title"] = ViewBag.Action + " Customer";
}
@*Change heading depending on the action*@
<h2>@ViewBag.Action Customer</h2>


<form asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="CustomerID" />

    <div class="form-group mb-3">   @*Add space below each row*@
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="CountryID">Country</label>
        <select asp-for="CountryID" class="form-control">
            <option value="">Select a country</option>
            @foreach (var country in ViewBag.Countries)
            {
                <option value="@country.CountryID">@country.Name</option>
            }
        </select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
