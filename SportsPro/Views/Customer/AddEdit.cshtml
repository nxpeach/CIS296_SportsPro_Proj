@model SportsPro.Models.Customer

@{
    ViewData["Title"] = ViewBag.Action + " Customer";
    Layout = "~/Views/Shared/_EditLayout.cshtml";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

@*Added code to display individual error messages*@

<h2>@ViewBag.Action Customer</h2>

<form asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="CustomerID" />

    <div class="form-group mb-3">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" placeholder="Enter first name (1-50 characters)" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" placeholder="Enter last name (1-50 characters)" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" placeholder="Enter address (1-50 characters)" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="Enter city (1-50 characters)" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" placeholder="Enter state (1-50 characters)" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" class="form-control" placeholder="Enter postal code (1-20 characters)" />
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CountryID">Country</label>
        <select asp-for="CountryID"
                asp-items="@(new SelectList(ViewBag.Countries, "CountryID", "Name"))"
                class="form-select">
            <option value="">Select a country...</option>
        </select>
        <span asp-validation-for="CountryID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Enter valid email (1-50 characters)" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Phone">Phone (Optional)</label>
        <input asp-for="Phone" class="form-control" placeholder="(999) 999-9999" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
