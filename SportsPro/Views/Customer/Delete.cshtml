@model Customer

@{
    ViewBag.Title = "Delete Customer";
}

<h2>Confirm Deletion</h2>

<h3>Are you sure you want to delete @Model.FullName?</h3>

<form asp-action="DeleteConfirmed" method="post" asp-route-id="@Model.CustomerID">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>