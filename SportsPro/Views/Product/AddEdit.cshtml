@model Product
@using Microsoft.AspNetCore.Mvc.ModelBinding

@{
	string title = ViewContext.RouteData.Values["action"].ToString().Equals("Add", StringComparison.OrdinalIgnoreCase) ? "Add Product" : "Edit Product"; //Change the title depending on the action
	ViewBag.Title = title;
	@*Layout = "~/Views/Shared/_Layout.cshtml";		need?*@ 
}

<h2>Add/Edit Product</h2>

<div asp-validation-summary="@ValidationSummary.All" class="text-danger"></div>

<form asp-action="Edit" method="post">	@*Means the form will save/send the data to the Edit action*@

	<div class="form-group">
		<label asp-for="ProductCode">Product Code</label>
		<input asp-for="ProductCode" class="form-control">
		<span asp-validation-for="ProductCode" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Name">Name</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="YearlyPrice">Yearly Price</label>
		<input asp-for="YearlyPrice" class="form-control">
		<span asp-validation-for="YearlyPrice" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="ReleaseDate">Release Date</label>
		<input asp-for="ReleaseDate" type="text"class="form-control">
		<span asp-validation-for="ReleaseDate" class="text-danger"></span>
	</div>

	<input type="hidden" asp-for="ProductID" />

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-action="List" class="btn btn-primary">Cancel</a>	@*Goes back to the list view*@

</form>